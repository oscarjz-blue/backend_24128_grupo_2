<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>nÂ°</td>
            <td>Nombre</td>
            <td>Apellido</td>
            <td>Email</td>
            <td>Password</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (users) { %> <% for(var i = 0; i < users.length; i++) {
          %>
          <tr>
            <td><%= (i + 1) %></td>
            <td><%= users[i].name %></td>
            <td><%= users[i].surname %></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].password %></td>
            <td class="d-flex gap-2">
              <a href="/user/update/<%= users[i].id %>" class="btn btn-info">
                Edit
              </a>
              <a href="/user/delete/<%= users[i].id %>" class="btn btn-danger">
                Delete
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <div class="card-body">
        <form action="/user/add" method="POST">
          <input
            type="text"
            name="name"
            placeholder="Nombre"
            class="form-control mb-2"
            autofocus
            required
            contenteditable="true"
          />
          <input
            type="text"
            name="surname"
            placeholder="Apellido"
            class="form-control mb-2"
            required
          />
          <input
            type="email"
            name="email"
            placeholder="Email"
            class="form-control mb-2"
            required
          />
          <input
            type="password"
            name="password"
            placeholder="Password"
            class="form-control mb-2"
          />

          <button type="submit" class="btn btn-info">save user</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
